using System;

class Program
{
    static void Main(string[] args)
    {
        Console.Write("Enter your age: ");
        string input = Console.ReadLine();

        if (int.TryParse(input, out int age))
        {
            if (age < 0)
            {
                Console.WriteLine("Invalid input. Please enter a valid age.");
            }
            else
            {
                double ticketPrice;

                if (age >= 65 || age <= 12)
                {
                    ticketPrice = 7.0;
                }
                else
                {
                    ticketPrice = 10.0;
                }

                Console.WriteLine($"The ticket price for someone of age {age} is GHC{ticketPrice}.");
            }
        }
        else
        {
            Console.WriteLine("Invalid input. Please enter a valid age.");
        }

        Console.ReadLine();
    }
}
